[MAIN_MENU] {
    stretch: true

    [TITLE] {
        alignment: top
        type: label
        theme_data: menu_menu_title
        caption: Game Title
        scale_to_text: true
    }

    {
        layout: vertical
        alignment: bottom
        match_content_size: true
        
        [START] {
            @ref: MAIN_BUTTON
            caption: START
        }

        [OPTIONS] {
            @ref: MAIN_BUTTON
            caption: OPTIONS
        }

        [CREDITS] {
            @ref: MAIN_BUTTON
            caption: CREDITS
        }

        [QUIT] {
            @ref: MAIN_BUTTON
            caption: QUIT
            keybinding: ESCAPE
        }
    }

    [MOD] {
        @ref: MAIN_BUTTON
        caption: LOAD MOD
        alignment: bottomleft
        visible: false
    }
}

[OPTIONS_MENU] {
    stretch: true

    [OPTIONS] {
        layout: vertical
        alignment: center
        match_content_size: true
        
        [EFFECT_VOLUME] {
            @ref: OPTIONS_SLIDER LABEL=Effect volume:
        }
        [MUSIC_VOLUME] {
            @ref: OPTIONS_SLIDER LABEL=Music volume:
        }
        
        {
            type: label
            caption: Controls
            fill_width: true
            height: 40
            
            [REBIND] {
                type: button
                caption: REBIND
                size: 75, 30
                alignment: right
                text.size: 20
            }
        }
    }

    {
        layout: vertical
        alignment: bottom
        match_content_size: true
        [BACK] {
            @ref: MAIN_BUTTON
            caption: BACK
            keybinding: ESCAPE
        }
    }
}

[REBIND_MENU] {
    match_content_size: true
    alignment: center
    layout: vertical
    {
        type: label
        caption: Press button for:
        scale_to_text: true
        alignment: center
    }
    [KEY_NAME] {
        type: label
        caption: XXX
        scale_to_text: true
        alignment: center
    }
}

[CREDITS_MENU] {
