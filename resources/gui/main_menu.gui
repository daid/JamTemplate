        alignment: bottom
        match_content_size: true
        [BACK] {
            @ref: MAIN_BUTTON
            caption: BACK
            keybinding: ESCAPE
        }
    }
}

[@MAIN_BUTTON] {
    type: button
    size: 200, 50
    margin: 10
    alignment: center
}
[@OPTIONS_SLIDER] {
    match_content_size: true
    layout: vertical
    {
        size: 300, 30
        {
            type: label
            caption: {LABEL}
            text.alignment: left
            stretch: true
        }
        [VALUE] {
            type: label
            caption: XXX
            text.alignment: right
            stretch: true
        }
    }
    [SLIDER] {
        size: 300, 30
        type: slider
        range: 100
    }
}
[@OPTIONS_KEYBINDING] {
    fill_width: true
    height: 20
    layout: horizontal
    [NAME] {
        type: label
        fill_height: true
        width: 150
        caption: ...
        text.size: 20
        text.alignment: right
        margin: 0, 5, 0, 0
    }
    [VALUE] {
        type: label
        stretch: true
        caption: ...
        text.size: 20
        text.alignment: left
    }
}
[@CREDITS_SECTION] {
    type: label
    scale_to_text: true
    text.size: 25
    alignment: center
}
[@CREDITS_TITLE] {
    type: label
    scale_to_text: true
    text.size: 15
    text.alignment: left
}
[@CREDITS_LINE] {
    type: label
    scale_to_text: true
    text.size: 10
    text.alignment: left
}
